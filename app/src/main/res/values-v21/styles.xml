<?xml version="1.0" encoding="utf-8"?>
<resources>

        <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
                <!-- Customize your theme here. -->
                <item name="colorPrimary">@color/colorPrimary</item>
                <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
                <item name="colorAccent">@color/colorAccent</item>
                <!-- enable window content transitions -->
                <item name="android:windowContentTransitions">true</item>

                <!-- enable overlapping of exiting and entering activities-->
                <item name="android:windowAllowEnterTransitionOverlap">true</item>
                <item name="android:windowAllowReturnTransitionOverlap">true</item>
        </style>

        <style name="Theme.AppCompat.Translucent" parent="@style/Theme.AppCompat.Light.NoActionBar">
                <item name="android:windowNoTitle">true</item>
                <item name="android:windowBackground">@color/colorGrayTransparent</item>
                <item name="android:colorBackgroundCacheHint">@null</item>
                <item name="android:windowIsTranslucent">true</item>
                <item name="android:windowAnimationStyle">@android:style/Animation</item>
                <!-- enable window content transitions -->
                <item name="android:windowContentTransitions">true</item>

                <!-- enable overlapping of exiting and entering activities-->
                <item name="android:windowAllowEnterTransitionOverlap">true</item>
                <item name="android:windowAllowReturnTransitionOverlap">true</item>
        </style>
</resources>